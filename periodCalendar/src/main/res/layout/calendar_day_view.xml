<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@color/calendar_picker_bg"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/outerCircle"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_2sdp">


        <RelativeLayout
            android:id="@+id/innerCircle"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:visibility="visible">

            <TextView
                android:id="@+id/rvCycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_7sdp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/vDayName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_margin="@dimen/_1sdp"
            android:textColor="@color/calendar_day_normal_font"
            android:textSize="@dimen/_13sdp" />


    </RelativeLayout>

    <View
        android:id="@+id/mView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_6sdp"
        android:layerType="software"
        android:visibility="visible" />

    <View
        android:id="@+id/mViewDot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />

</RelativeLayout>
