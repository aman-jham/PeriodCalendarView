<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CalendarPickerCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
    </style>

    <style name="CalendarPickerCell.Month">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:padding">@dimen/_16sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CalendarPickerCell.Week" parent="CalendarPickerCell">
        <item name="android:textSize">@dimen/calendar_week_textsize</item>
        <item name="android:textColor">@color/calendar_week_font</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

